<% provide(:title, "商品一覧") %>
<div class="container">
  <div class="row mt-4 mb-4">
    <h3 class="item-index bg-light">商品一覧<small>（全<%= @items.count %>件）</small></h3>
  </div>

  <div class="row">
    <% @items.each do |item| %>
      <div class="col-md-3  mb-5">
        <p class="item-img"><%= link_to item_path(item.id) do %><%= attachment_image_tag item, :image, size: "175x175", class: "rounded-circle" %><% end %></p>
        <p class="ml-3"><%= item.name %></p>
        <p class="ml-3">¥<%= ((item.price * 1.1).floor).to_s(:delimited) %></p>
      </div>
    <% end %>
    <span class="kaminari mx-auto"><%= paginate @items %></span>
  </div>
</div>