<div class="container">
  <div class="row">
    <h2>商品一覧<small>（全<%= @items.count %>件）</small></h2>
  </div>

  <div class="row">
    <% @items.each do |item| %>
    
      <div class="col-md-3">
        <%= link_to item_path(item.id) do %><%= attachment_image_tag item, :image, size: "100x100" %><% end %><br />
        <%= item.name %><br />
        ¥<%= ((item.price * 1.1).floor).to_s(:delimited) %>
      </div>
      
    <% end %>
  </div>
</div>