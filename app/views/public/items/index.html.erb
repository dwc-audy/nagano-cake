<div class="container">
  <div class="row mt-4 mb-4">
    <h3>商品一覧<small>（全<%= @items.count %>件）</small></h3>

  </div>

  <div class="row">
    <% @items.each do |item| %>
      <div class="col-md-3">
        <p><%= link_to item_path(item.id) do %><%= attachment_image_tag item, :image, size: "150x150" %><% end %></p>
        <p><%= item.name %></p>
        <p class="mx-left">¥<%= ((item.price * 1.1).floor).to_s(:delimited) %></p>
      </div>
    <% end %>
  </div>
</div>