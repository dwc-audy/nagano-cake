<%= form_with model: address, local: true do |f| %>
  <div class="form-group">
    <%= f.label :postal_code, "郵便番号(ハイフン不要):" %><br />
    <%= f.text_field :postal_code, autofocus: true, placeholder: "例)3810000", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :address, "住所(部屋番号まで)" %><br />
    <%= f.text_field :address, autofocus: true, placeholder: "例)長野県長野市〇-〇-〇", class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= f.label :name, "宛先:" %><br />
    <%= f.text_field :name, autofocus: true, autofocus: true, placeholder: "例)長野花子", class: "form-control"  %>
  </div>

  <div class="actions">
    <% if action_name == "edit" %>
      <%= f.submit "変更保存", class: "btn btn-success btn-block" %>
    <% else %>
      <%= f.submit "新規登録", class: "btn btn-success btn-block" %>
    <% end %>
  </div>
<% end %>