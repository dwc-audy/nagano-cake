<% provide(:title, "カート内商品") %>
<div class="container">
  <div class="row">
    <div class="col-md-6 mt-4 mb-4 font">
      <h2>ショッピングカート</h2>
    </div>
    <div class="col-md-6 text-right mt-4 mb-4">
      <%= link_to 'カートを空にする', cart_items_destroy_all_path, method: :delete, class: "btn btn-danger font" %>
    </div>

  </div>

  <div class="row">
    <div class="col-md-12">
      <table class="table table-bordered">
        <thead>
          <tr class="bg-light font text-center">
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @sum = 0 %>
          <% @cart_item.each do |item| %>
            <tr>
              <td class="font"><%= attachment_image_tag item.item, :image, size: "50x50", class: "mr-2 rounded-circle" %><%= item.item.name %></td>
              <td class="text-center font"><%= ((item.item.price * 1.1).floor).to_s(:delimited) %>円</td>
              <td class="text-center font">
                <%= form_with model: item, url: cart_item_path(item.id), local: true do |f| %>
                  <%= f.select :amount, options_for_select((1..20).to_a, item.amount) %>
                  <%= f.submit '変更', class: "btn btn-success ml-3 font" %>
                <% end %>
              </td>
              <td class="font text-center"><%= (((item.item.price * 1.1).floor) * item.amount).to_s(:delimited) %>円</td>
              <td class="text-center font"><%= link_to '削除する', cart_item_path(item.id), method: :delete, class: "btn btn-danger" %></td>
              <% @sum += ((item.item.price * 1.1).floor) * item.amount %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-md-4">
      <%= link_to '買い物を続ける', root_path, class: "btn btn-primary font" %>
    </div>

    <div class="col-md-4 text-center mx-auto">
      <table class="table table-bordered">
        <thead>
          <th class="bg-light font">合計金額</th>
          <th class="font"><%= @sum.to_s(:delimited)  %>円</th>
        </thead>
      </table>
    </div>
  </div>

  <% if @cart_item != [] %>
    <div class="row">
      <div class="col-md-2 mx-auto mt-4 mb-4">
          <p><%= link_to '情報入力に進む', new_order_path, class: "btn btn-success btn-block font"%></p>
      </div>
    </div>
  <% end %>
</div>