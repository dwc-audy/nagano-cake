<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2>ショッピングカート</h2>
    </div>
    <div class="col-md-6">
      <%= link_to 'カートを空にする', cart_items_destroy_all_path, method: :delete, class: "btn btn-danger" %>
    </div>

  </div>

  <div class="row">
    <div class="col-md-12">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @sum = 0 %>
          <% @cart_item.each do |item| %>
            <tr>
              <td><%= attachment_image_tag item.item, :image, size: "50x50" %><%= item.item.name %></td>
              <td><%= ((item.item.price * 1.1).floor).to_s(:delimited) %></td>
              <td>
                <%= form_with model: item, url: cart_item_path(item.id), local: true do |f| %>
                  <%= f.select :amount, options_for_select((1..20).to_a, item.amount) %>
                  <%= f.submit '変更', class: "btn btn-success" %>
                <% end %>
              </td>
              <td><%= (((item.item.price * 1.1).floor) * item.amount).to_s(:delimited) %></td>
              <td><%= link_to '削除する', cart_item_path(item.id), method: :delete, class: "btn btn-danger" %></td>
              <% @sum += ((item.item.price * 1.1).floor) * item.amount %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <%= link_to '買い物を続ける', root_path, class: "btn btn-primary" %>
    </div>

    <div class="col-md-6">
      <span>合計金額</span>:<%= @sum.to_s(:delimited)  %>
    </div>
  </div>
</div>