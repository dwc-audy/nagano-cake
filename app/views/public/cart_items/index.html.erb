<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2>ショッピングカート</h2>
    </div>
    <div class="col-md-6">
      <p>カートを空にする</p>
    </div>

  </div>

  <div class="row">
    <div class="col-md-12">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @cart_items.each do |item| %>
            <tr>
              <td><%= attachment_image_tag item, :image, size: "50x50" %><%= item.name %></td>
              <td><%= ((@item.price * 1.1).floor).to_s(:delimited) %></td>
              <td><%= item.amount %></td>
              <td><%= ((@item.price * 1.1).floor).to_s(:delimited) %></td>
              <td></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>