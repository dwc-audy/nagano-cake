
<div class="container mt-5">
  <div class="row">
    <div class="col-md-3">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>ジャンル一覧</th>
          </tr>
        </thead>
        <tbody>
        　<% @genres.each do |genre| %>
            <tr>
              <td><%= link_to genre.name, search_items_path(genre.id), method: :get %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-9">
      <h3>新着商品</h3>
      <% @items.each do |item| %>
        <%= link_to item_path(item.id) do %><% attachment_image_tag item, :image, size: "150x150" %><% end %>
        <span><%= item.name %></span>
        <span class="mx-left">¥<%= ((item.price * 1.1).floor).to_s(:delimited) %></span>
      <% end %>
    </div>
  </div>
</div>
