<div class="container">
  <h3>ジャンル検索</h3>
  <div class="row">
    <div class="col-md-3">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>ジャンル一覧</th>
          </tr>
        </thead>
        <tbody>
        　<% @genres.each do |genre| %>
            <tr>
              <td><%= link_to genre.name, search_items_path(genre.id), method: :get %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  
  <h3>新着商品</h3>
  <div class="row">
    <% @items.each do |item| %>
      <div class="col-md-3">
        <p><%= attachment_image_tag item, :image, size: "150x150" %></p>
        <p><%= item.name %></p>
        <p class="mx-left">¥<%= ((item.price * 1.1).floor).to_s(:delimited) %></p>
      </div>
    <% end %>
  </div>
  <%= link_to "もっと見る", items_path %>
</div>

