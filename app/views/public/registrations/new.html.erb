<div class="container">
  <div class="row mb-4 mx-auto">
    <div class="col-md-12">
      <p class="h4 mt-4 mb-5">会員新規登録</p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%= form_for resource, as: resource_name, url: registration_path(resource_name) do |f| %>
        <div class="col-md-5 mx-auto">
          <%= render "public/registrations/error_messages", resource: resource %>

          <div class="form-group">
            <%= f.label :last_name, "名前(姓):" %><br />
            <%= f.text_field :last_name, autofocus: true, placeholder: "例)長野", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :first_name, "名前(名):" %><br />
            <%= f.text_field :first_name, autofocus: true, placeholder: "例)花子", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :last_name_kana, "名前(セイ):" %><br />
            <%= f.text_field :last_name_kana, autofocus: true, placeholder: "例)ナガノ", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :first_name_kana, "名前(メイ):" %><br />
            <%= f.text_field :first_name_kana, autofocus: true, placeholder: "例)ハナコ", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :postal_code, "郵便番号(ハイフン不要):" %><br />
            <%= f.text_field :postal_code, autofocus: true, placeholder: "例)3810000", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :address, "住所(部屋番号まで):" %><br />
            <%= f.text_field :address, autofocus: true, placeholder: "例)長野県長野市〇-〇-〇", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :telephone_number, "電話番号(ハイフン不要):" %><br />
            <%= f.text_field :telephone_number, autofocus: true, placeholder: "例)09000000000", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :email, "メールアドレス:" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "例)nagano@cake.jp", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :password, "パスワード(6文字以上):" %><br />
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワードを入力して下さい", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, "パスワード(確認):" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワードを入力して下さい", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.submit "新規登録", class: 'btn btn-success' %>
          </div>
        <% end %>

        <%= link_to "ログイン", new_session_path(resource_name) %>
      </div>
    </div>
  </div>
</div>
