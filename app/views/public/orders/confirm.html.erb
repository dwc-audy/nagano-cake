<% provide(:title, "注文情報確認") %>

<div class="container">
  <div class="row">
    <p class="h4 mt-4 mb-5">注文情報確認</p>
  </div>
  <%= form_with(model: @order, local: true, url: orders_path) do |f| %>
    <div class="row">
      <div class="col-md-8">
        <table class="table table-bordered">
          <thead>
            <tr class="bg-light">
              <th>商品名</th>
              <th>単価(税込)</th>
              <th>数量</th>
              <th>小計</th>
            </tr>
          </thead>
          <tbody>
            <% @cart_items.each do |cart_item| %>
              <% @sum += (cart_item.item.price*1.1*cart_item.amount).floor %>
              <tr>
                <td>
                  <%= attachment_image_tag cart_item.item, :image, size: "50x50" %>
                  <%= cart_item.item.name %>
                </td>
                <td><%= ((cart_item.item.price * 1.1).floor).to_s(:delimited) %></td>
                <td><%= cart_item.amount %></td>
                <td><%= ((cart_item.item.price * 1.1).floor * cart_item.amount).to_s(:delimited) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="col-md-4">
        <table class="table table-bordered">
          <tr>
            <th class="bg-light">送料</th>
            <td><%= @order.shipping_cost.to_s(:delimited) %></td>
          </tr>
          <tr>
            <th class="bg-light">商品合計</th>
            <td><%= @sum.to_s(:delimited) %></td>
          </tr>
          <tr>
            <th class="bg-light">請求金額</th>
            <td><%= (@sum + @order.shipping_cost).to_s(:delimited) %></td>
          </tr>
        </table>
      </div>
    </div>

    <div class="row">
      <div class="col-md-8">
        <table class="table table-borderless">
          <tr>
            <th class="h5">支払方法</th>
            <td><%= @order.payment_method %></td>
          </tr>
          <tr>
            <th class="h5">お届け先</th>
            <td>
              〒<%= current_customer.postal_code.slice(0, 3) %>-<%= current_customer.postal_code.slice(3, 4) %>
      　        <%= current_customer.address %><br>
      　       <%= current_customer.last_name %><%= current_customer.first_name %>
            </td>
          </tr>
        </table>
      </div>
    </div>
    <%= f.hidden_field :payment_method, :value => @order.payment_method %>
    <%= f.hidden_field :name, :value => @order.name %>
    <%= f.hidden_field :postal_code, :value => @order.postal_code %>
    <%= f.hidden_field :address, :value => @order.address%>
    <%= f.hidden_field :shipping_cost %>
    <%= f.hidden_field :total_payment, :value => @sum %>
    <div class="row d-flex justify-content-center">
      <div class="form-group">
        <%= f.submit"購入を確定する", class: "btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>
