<% provide(:title, "注文履歴一覧") %>
<div class="container">
  <div class="row">
    <h4>注文一覧</h4>
    <div class="col-md-12">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>注文日</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>状況</th>
            <th>詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
              <td>
                <% order.order_details.each do |order_detail| %>
                  <%= order_detail.item.name %><br>
                <% end %>
              </td>
              <td><%= order.total_payment+800 %></td>
              <td><%= order.status %></td>
              <td>
                <%= link_to '表示する', order_path(order), class: "btn btn-warning" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

