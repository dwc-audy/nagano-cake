<div class="container">
  <div class="row mb-4">
    <div class="col-md-12">
      <h4>商品新規登録</h4>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_with model: @item, url: admin_items_path, local: true do |f| %>

      <div class="form-group">
        <p>商品画像</p><%= f.attachment_field :image %>
      </div>

      <div class="form-group">
        <p>商品名</p><%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <p>商品説明</p><%= f.text_area :introduction, rows: "5", placeholder: "ここに説明文を記述してください", class: "form-control edit-form" %>
      </div>

      <div class="form-group">
        <p>ジャンル</p><%= f.collection_select :genre_id, Genre.all, :id, :name, :prompt => "選択してください" %>
      </div>

      <div class="form-group">
        <p>税抜価格</p><%= f.text_field :price, placeholder: "1000" %>
      </div>

      <div class="form-group">
        <p>販売ステータス</p>

          <%= f.radio_button :is_active, true %>
          <%= f.label :is_active, '販売中', value: true %>

          <%= f.radio_button :is_active, false %>
          <%= f.label :is_active, '販売停止中', value: false %>

      </div>

        <%= f.submit '新規登録', class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>