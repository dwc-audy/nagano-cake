<% provide(:title, "管理者 商品編集") %>
<div class="container">

  <div class="text-danger">
    <% if @item.errors.any? %>
      <%= @item.errors.count %>件のエラーが発生しました<br />
      <% @item.errors.full_messages.each do |message| %>
        <%= message %><br />
      <% end %>
    <% end %>
  </div>

  <div class="row mx-auto">
    <p class="h4 mt-4 mb-5">商品編集</p>
  </div>

  <div class="row">
    <div class="col-md-12">
      <%= form_with model: @item, url: admin_item_path(@item), local: true do |f| %>
      <div class="col-md-5 mx-auto">
        <div class="form-group">
          <p>商品画像</p><%= f.attachment_field :image %><br />
        </div>

        <div class="form-group">
          <p>商品名</p><%= f.text_field :name, class: "form-control" %><br />
        </div>

        <div class="form-group">
          <p>商品説明</p><%= f.text_area :introduction, class: "form-control" %><br />
        </div>

        <div class="form-group">
          <p>ジャンル</p><%= f.collection_select :genre_id, Genre.all, :id, :name, :prompt => "選択してください", class: "form-control" %><br />
        </div>

        <div class="form-group">
          <p>税抜価格</p><%= f.text_field :price, placeholder: "1000", class: "form-control" %><br />
        </div>

        <div class="form-group">
          <p>販売ステータス</p>
        </div>

        <div>
          <%= f.radio_button :is_active, true %>
          <%= f.label :is_active, '販売中', value: true %>

          <%= f.radio_button :is_active, false %>
          <%= f.label :is_active, '販売停止中', value: false %>
        </div>
      </div>

        <div class="col-md-4 mx-auto mb-4 mt-4">
          <p><%= f.submit '編集する', class: "btn btn-success btn-block" %><p>
        </div>
      <% end %>
    </div>
  </div>
</div>