<div class="container">
  <div class="row">
    <h2>商品詳細</h2>
  </div>

  <div class="row">
    <div class="col-md-4">
      <%= attachment_image_tag @item, :image, size: "100x100" %>
    </div>
    <div class="col-md-6">
      <span>商品名</span>:<%= @item.name %><br />
      <span>商品説明</span>:<%= @item.introduction %><br />
      <span>ジャンル</span>:<%= @item.genre.name %><br />
      <span>税込価格（税抜価格）</span>:<%= @tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円<br />
      <span>販売ステータス</span>:
      <% if @item.is_active == true %>
        <span class="text-success">販売中</span>
      <% else %>
        <span class="text-danger">販売停止中</span>
      <% end %>
    </div>
  </div>

  <div class="row">
    <%= link_to '編集する', edit_admin_item_path(@item), class: "btn btn-success " %>
  </div>
</div>