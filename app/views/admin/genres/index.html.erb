<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h4 class="text-center">ジャンル一覧・追加</h4>
    </div>
  </div>

  <div class="row mt-5 mb-5">
    <div class="col-md-12">
      <%= form_with model: @genre, url: admin_genres_path, local: true do|f| %>
        <span class="h6 mr-5">ジャンル名</span>
        <%= f.text_field :name, placeholder: "ジャンル名" %>
        <%= f.submit "新規登録", class: "btn btn-success ml-5" %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <table class="table">
        <thead>
          <tr>
            <th class="text-center">ジャンル</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to '編集', edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>