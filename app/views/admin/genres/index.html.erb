<div class="container">
  <div class="row">
    <h2>ジャンル一覧・追加</h2>
  </div>

  <div class="row">
    <div class="col-md-12">
      <%= form_with model: @genre, local: true do |f| %>
        <h4>ジャンル名</h4>
        <%= f.text_field :name %>
        <%= f.submit '新規登録', class: "btn btn-success btn-block" %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <table class="table">
        <thead>
          <tr>
            <th>ジャンル</th>
          </tr>
        </thead>

        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to '編集', edit_admin_genre_path, class: "btn btn-success btn-block" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
