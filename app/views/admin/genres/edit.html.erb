<div class="container">
  <div class="row">
    <h2>ジャンル編集</h2>
  </div>

  <div class="row">
    <div class="col-md-12">
      <%= form_with model: @genre, url: admin_genre_path(@genre.id), local: true do |f| %>
        <span class="h6">ジャンル名</span>
        <%= f.text_field :name %>
        <%= f.submit '変更を保存', class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>