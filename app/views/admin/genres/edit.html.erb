<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h4 class="text-center mb-5">ジャンル編集</h4>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <%= form_with model: @genre, url: admin_genre_path(@genre.id), local: true do |f| %>
        <span class="h6 mr-5">ジャンル名</span>
        <%= f.text_field :name %>
        <%= f.submit '変更を保存', class: "btn btn-success ml-5" %>
      <% end %>
    </div>
  </div>
</div>