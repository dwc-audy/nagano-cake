<%= form_with url: admin_customers_search_path, method: :post, local: true do |f| %>
  <%= f.select :column_customer, options_for_select( " 名前(姓)": "last_name", "名前(名)": "first_name"),
                {}, class: "custom-select" %>
  <%= f.search_field :value_customer, placeholder: "名前(姓)", class: "form-control" %>
  <%= f.submit "会員を検索", class: "btn btn-outline-success" %>
<% end %>

<script>
  var select = document.querySelector("#column_customer");
  select.onchange = event => {
    if(select.value == "last_name"){
      $("#value_customer").attr("placeholder", "名前(姓)");
    } else if(select.value == "first_name"){
      $("#value_customer").attr("placeholder", "名前(名)");
    }
  };
</script>