<% provide(:title, "管理者 会員一覧") %>
<div class="container">
  <div class="row mx-auto">
    <p class="h4 mt-4 mb-5">会員一覧</p>
  </div>
  <div class="row">
    <div class="col-md-9">
      <table class="table table-hover">
        <thead>
          <tr class="bg-light">
            <th>会員ID</th>
            <th>名前</th>
            <th>メールアドレス</th>
            <th>会員ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td>
                <%= link_to admin_customer_path(customer.id), class: "text-dark" do %>
                  <%= customer.last_name %> <%= customer.first_name %>
                <% end %>
              </td>
              <td><%= customer.email %></td>
              <td>
                <% if customer.is_deleted == false %>
                  <span class="text-success">有効</span>
                <% else %>
                  <span class="text-secondary">退会</span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="col-md-9 d-flex justify-content-center">
        <span class="kaminari"><%= paginate @customers %></span>
      </div>
    </div>
  </div>
</div>
