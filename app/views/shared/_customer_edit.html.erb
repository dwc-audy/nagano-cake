  <div class="row">
    <div class="col-md-12">
      <%= form_with model: customer, url: path, local: true do |f| %>
        <div class="col-md-8 mx-auto">
          <% if customer.errors.any? %>
            <div id="error_explanation">
              <h3>入力内容を確認して下さい</h3>
            </div>
          <% end %>

          <div class="form-row">
            <div class="form-group col">
              <%= f.label :last_name %> <span class="badge badge-danger">必須</span><br />
              <%= f.text_field :last_name, autofocus: true, placeholder: "例)長野",
                                class: "form-control #{"is-invalid" if customer.errors.include?(:last_name)}" %>
              <%= render 'shared/errors', obj: customer, column: :last_name %>
            </div>
            <div class="form-group col">
              <%= f.label :first_name %> <span class="badge badge-danger">必須</span><br />
              <%= f.text_field :first_name, autofocus: true, placeholder: "例)花子",
                                class: "form-control #{"is-invalid" if customer.errors.include?(:first_name)}" %>
              <%= render 'shared/errors', obj: customer, column: :first_name %>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col">
              <%= f.label :last_name_kana %> <span class="badge badge-danger">必須</span><br />
              <%= f.text_field :last_name_kana, autofocus: true, placeholder: "例)ナガノ",
                                class: "form-control #{"is-invalid" if customer.errors.include?(:last_name_kana)}" %>
              <%= render 'shared/errors', obj: customer, column: :last_name_kana %>
            </div>

            <div class="form-group col">
              <%= f.label :first_name_kana %> <span class="badge badge-danger">必須</span><br />
              <%= f.text_field :first_name_kana, autofocus: true, placeholder: "例)ハナコ",
                                class: "form-control #{"is-invalid" if customer.errors.include?(:first_name_kana)}" %>
              <%= render 'shared/errors', obj: customer, column: :first_name_kana %>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-4">
              <%= f.label :postal_code, "郵便番号(ハイフン不要)" %> <span class="badge badge-danger">必須</span><br />
              <%= f.text_field :postal_code, autofocus: true, placeholder: "例)3810000",
                                class: "form-control #{"is-invalid" if customer.errors.include?(:postal_code)}" %>
              <%= render 'shared/errors', obj: customer, column: :postal_code %>
            </div>
            <div class="form-group col-8">
              <%= f.label :address, "住所(部屋番号まで)" %><span class="badge badge-danger"> 必須</span><br />
              <%= f.text_field :address, autofocus: true, placeholder: "例)長野県長野市〇-〇-〇",
                                class: "form-control #{"is-invalid" if customer.errors.include?(:address)}" %>
              <%= render 'shared/errors', obj: customer, column: :address %>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col">
              <%= f.label :telephone_number, "電話番号(ハイフン不要)" %> <span class="badge badge-danger">必須</span><br />
              <%= f.text_field :telephone_number, autofocus: true, placeholder: "例)09000000000",
                                class: "form-control #{"is-invalid" if customer.errors.include?(:telephone_number)}" %>
              <%= render 'shared/errors', obj: customer, column: :telephone_number %>
            </div>
            <div class="form-group col">
              <%= f.label :email, "メールアドレス" %> <span class="badge badge-danger">必須</span><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "例)nagano@cake.jp",
                                class: "form-control #{"is-invalid" if customer.errors.include?(:email)}" %>
              <%= render 'shared/errors', obj: customer, column: :email %>
            </div>
          </div>

          <% if admin_signed_in? %>
            <div class="form-group">
              <%= f.label :is_deleted, "有効" %>
              <%= f.radio_button :is_deleted, false %>
              <%= f.label :is_deleted, "退会" %>
              <%= f.radio_button :is_deleted, true %>
            </div>
          <% end %>

          <div class="form-row">
          <div class="form-group col-3">
            <%= f.submit "編集内容を保存", class: "btn btn-success" %>
          </div>
          <div class="form-group col-3">
            <% if customer_signed_in? %>
              <%= link_to "退会する", customers_unsubscribe_path, class: "btn btn-danger" %>
            <% end %>
          </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>